<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:exitFadeDuration="200">
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/kitSecondary"/>
            <stroke android:color="@color/kitSecondary"
                android:width="1dp"/>
            <corners android:radius="25dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:color="@color/kitOutline"
                android:width="1dp"/>
            <corners android:radius="25dp"/>
        </shape>
    </item>
</selector>