<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:enterFadeDuration="150" android:exitFadeDuration="150">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1dp" android:color="@color/kitPrimary" />
            <corners android:radius="@dimen/defaultCornerRadius" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <stroke android:width="1dp" android:color="@color/kitPrimary" />
            <corners android:radius="@dimen/defaultCornerRadius" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:color="@color/kitOutline"
                android:width="1dp"/>
            <corners android:radius="@dimen/defaultCornerRadius"/>
        </shape>
    </item>
</selector>