<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SearchView">
        <attr name="android:fontFamily" format="reference" />
        <attr name="android:hint" format="string" />
        <attr name="android:maxLength" format="integer" />
        <attr name="android:textColor" format="color" />
        <attr name="android:textSize" format="dimension" />
        <attr name="android:inputType" format="enum"/>
        <attr name="hintTextColor" format="color" />
<!--        buttons-->
        <attr name="backButtonIcon" format="reference" />
        <attr name="backButtonTint" format="color" />
        <attr name="clearButtonIcon" format="reference" />
        <attr name="clearButtonTint" format="color" />
        <attr name="micButtonIcon" format="reference" />
        <attr name="micButtonTint" format="color" />
        <attr name="micEnabled" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SuggestionView">
        <attr name="android:fontFamily" format="reference" />
        <attr name="itemDivider" format="boolean" />
        <attr name="itemBackground" format="reference" />
        <attr name="historyIcon" format="reference" />
        <attr name="suggestionIcon" format="reference" />
        <attr name="copyIcon" format="reference" />
        <attr name="iconTint" format="color" />
    </declare-styleable>

    <declare-styleable name="_TitleFrameView">
        <attr name="title" format="string" />
        <attr name="titleFontFamily" format="reference" />
        <attr name="errorFontFamily" format="reference" />
        <attr name="titleTextSize" format="dimension" />
        <attr name="errorTextSize" format="dimension" />
        <attr name="titleTextColor" format="color" />
        <attr name="errorTextColor" format="color" />
        <attr name="titleBottomGap" format="dimension" />
        <attr name="horizontalGap" format="dimension" />
        <attr name="hideTitle" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="InputView">
        <attr name="inputHint" format="string"/>
        <attr name="inputFontFamily" format="reference" />
        <attr name="inputBackground" format="reference" />
        <attr name="inputErrorBackground" format="reference" />
        <attr name="inputHorizontalPadding" format="dimension" />
        <attr name="inputVerticalPadding" format="dimension" />
        <attr name="inputTextSize" format="dimension" />
        <attr name="clearErrorOnInput" format="boolean" />
        <attr name="inputTextColor" format="color" />
        <attr name="inputHintTextColor" format="color" />
        <attr name="android:gravity"/>
        <attr name="android:imeOptions"/>
        <attr name="android:inputType"/>
        <attr name="android:maxLines"/>
        <attr name="android:maxLength"/>
        <attr name="android:minLines"/>
        <attr name="android:lines"/>
    </declare-styleable>

    <declare-styleable name="RadioScrollView">
        <attr name="radioFontFamily" format="reference" />
        <attr name="radioBackground" format="reference" />
        <attr name="radioHorizontalPadding" format="dimension" />
        <attr name="radioVerticalPadding" format="dimension" />
        <attr name="radioTextSize" format="dimension" />
        <attr name="radioTextColor" format="color" />
        <attr name="radioGap" format="dimension" />
        <attr name="showRadioButton" format="boolean"/>
        <attr name="android:entries"/>
    </declare-styleable>

    <declare-styleable name="PageView">
        <attr name="toolbarBackground" format="reference" />
        <attr name="toolbarHeight" format="dimension" />
        <attr name="toolbarTitle" format="string" />
        <attr name="toolbarTitleFont" format="reference" />
        <attr name="toolbarTitleSize" format="dimension" />
        <attr name="toolbarTitleColor" format="color" />
        <attr name="toolbarMenu" format="reference" />
        <attr name="toolbarTitlePosition" format="enum">
            <enum name="start" value="0" />
            <enum name="center" value="1" />
        </attr>
        <attr name="toolbarNavIcon" format="reference" />
        <attr name="toolbarNavTint" format="color" />
        <attr name="toolbarMenuTint" format="color" />

        <attr name="toolbarMenuBadgeBackgroundColor" format="color" />
        <attr name="toolbarMenuBadgeTextColor" format="color" />

        <attr name="toolbarNavClick" format="enum">
            <enum name="finish" value="1" />
            <enum name="none" value="0" />
        </attr>
        <attr name="toolbarShadowColor" format="color" />
        <attr name="toolbarShadowHeight" format="dimension" />
    </declare-styleable>

</resources>